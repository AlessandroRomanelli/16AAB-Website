.screenshot(data-id=screenshot._id ,data-timestamp=screenshot.timestamp)
  picture
    source(srcset=screenshot.pathMin, type='image/webp')
    source(srcset=screenshot.path, type='image/jpeg')
    img.lazy(data-src=screenshot.path)
  .description
    .header
      h2=screenshot.title
      span.date 
    p=screenshot.description
