extends layout

block content
  link(href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet")
  main.news-edit
    section
      .content
        h1 Add news
        if article
          form(data-method='PUT', data-id=article._id autocomplete='off')
            input(type='text' name='title' value=article.title)
            #editor !{article.content}
            .fileUpload
              label(for='image') Upload a different image (Max 2MB):
              input(type='file' name='image')
              img.preview(src='')
            input(type='submit' value='Post News')
        else
          form(data-method='POST' autocomplete='off')
            input(type='text' name='title' placeholder='Insert Title Here')
            #editor
              p Write here your news!
              p What you see <strong>is</strong> what you'll get!
            .fileUpload
              label(for='image') Upload a context image (Max 2MB):
              input(type='file' name='image')
              img.preview(src='')
            input(type='submit' value='Post News')
  script(src="https://cdn.quilljs.com/1.3.6/quill.js")
  script(src='/js/utils.js')
  script(src='/js/news.js')
